<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :user_name %><br />
    <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :contact_first_name %><br />
    <%= f.text_field :contact_first_name, autocomplete: "contact_first_name" %>
  </div>

  <div class="field">
    <%= f.label :contact_last_name %><br />
    <%= f.text_field :contact_last_name, autocomplete: "contact_last_name" %>
  </div>

  <div class="field">
    <%= f.label :primary_phone %><br />
    <%= f.text_field :primary_phone, autocomplete: "primary_phone" %>
  </div>

  <div class="field">
    <%= f.label :secondary_phone %><br />
    <%= f.text_field :secondary_phone, autocomplete: "secondary_phone" %>
  </div>

  <div class="field">
    <%= f.label :street_address %><br />
    <%= f.text_field :street_address, autocomplete: "street_address" %>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city, autocomplete: "city" %>
  </div>

  <div class="field">
    <%= f.label :county %><br />
    <%= f.text_field :county, autocomplete: "county" %>
  </div>

   <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state, autocomplete: "state" %>
  </div>

  <div class="field">
    <%= f.label :zip %><br />
    <%= f.text_field :zip, autocomplete: "zip" %>
  </div>

  <div class="field">
    <label for="user_type_selection">Account Type</label><br/>
    <input list="user_types" name="user_type">
    <datalist id="user_types">
      <option value="Family">
      <option value="Supplier">
      <option value="Shelter">  
    </datalist>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
